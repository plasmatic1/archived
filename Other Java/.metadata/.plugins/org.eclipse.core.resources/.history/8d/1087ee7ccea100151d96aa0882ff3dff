package me.tlwv2.api;

import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;

public class Images {
	public static ImageIcon getXImage(){
		BufferedImage xImage;
		try {
			xImage = ImageIO.read(getClass().getResource("../../../assets/space_x.png"));
			ImageIcon x = new ImageIcon(xImage);
			return x;
		} 
		catch (IOException e) {
			System.out.println("Could not find image!");
			
			return null;
		}
		
	}
	
	public static ImageIcon getOImage(){
		BufferedImage xImage;
		try {
			xImage = ImageIO.read(getClass().getResource("../../../assets/space_O.png"));
			ImageIcon x = new ImageIcon(xImage);
			return x;
		} 
		catch (IOException e) {
			System.out.println("Could not find image!");
			
			return null;
		}
	}
}
